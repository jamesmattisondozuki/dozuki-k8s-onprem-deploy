            value: 2
            periodSeconds: 300
    scaleTargetRef:
      name: app-deployment
    minReplicas: 4
    maxReplicas: 30
    metrics:
      - type: Resource
        resource:
          name: memory
          target:
            type: Utilization
            averageUtilization: 80
